                            <textarea name="txtMessage" rows="5" class="form-control required" placeholder="Message"></textarea>
                        </div>

                        <button type="submit" class="btn btn-default pull-right">SEND</button>
                        <div class="clearfix"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
