@section Scripts{
<div class="modal fade" id="messageSent">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Message sent</h4>
            </div>
            <div class="modal-body">
                <p>Thank you.</p>
                <p>Your message was sent to our Support Team.<br />
                You should receive a reply from a representative of our web site by the end of the next business day by email.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<div class="modal fade" id="messageError">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Message Error</h4>
            </div>
            <div class="modal-body">
                <p>Sorry.</p>
                <p>
                    Something went wrong<br />
                    Try Again
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
    <script>
        function getParameterByName(name) {
            name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
            var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
                results = regex.exec(location.search);
            return results === null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
        }
        $(window).load(function () {
            $('.carousel-inner').cycle({
                fx: 'fade',
                timeout: 4000,
                speed: 1000,
                pager: '.carousel-indicators',
                activePagerClass: 'active',
                after: function (el, next_el) {
                    $(next_el).addClass('activeSlide');
                },
                before: function (el) {
                    $(el).removeClass('activeSlide');
                }
            });
        });

        $(function () {
            var mexSent = getParameterByName('messageSent');
            if (mexSent == "True" || mexSent == "true") {
                $('#messageSent').modal('show');
            }
            if (mexSent == "False" || mexSent == "false") {
                $('#messageError').modal('show');
            }

            $('.btn-more').click(function () {
                $("body").animate({ scrollTop: $(".body-content").offset().top }, 2000);
            });

            $('.item-slide').each(function () {
                $(this).height($(window).height());
            });
            $('.carousel-inner').height($(window).height());
            $('header').height($(window).height());
        });

        $(window).resize(function () {
            $('header').height($(window).height());
            $('.carousel-inner').height($(window).height());
            $('.item-slide').each(function () {
                $(this).height($(window).height());
            });
        });

        $(window).scroll(function () {
            if (navigator.userAgent.match(/iPhone/i)) {
                $('.parallax').css('background-position-y', ((($(window).scrollTop() - ($('.parallax').offset().top - 600)) / 2) * -1));
            }
            else if (navigator.userAgent.match(/Android/i)) {

                $('.parallax').css('background-position-y', ((($(window).scrollTop() - ($('.parallax').offset().top - 600)) / 2.5) * -1));

            }else{
                $('.parallax').css('background-position-y', ((($(window).scrollTop() - ($('.parallax').offset().top - 220)) / 2) * -1));
            }
        });
    </script>
}
