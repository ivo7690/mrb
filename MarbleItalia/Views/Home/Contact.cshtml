@{
    ViewBag.Title = "Contact";
}
@section Meta{
    <meta name="description" content="Unit 10 Glenthorne Mews, Hammersmith, London, W6 0LJ - T: +44 (0)208 144 9785 - M: +44 (0)750 303 3874 - info@mrbitalia.com" />
}
@section Header{
    <div class="header-content animated fadeInDown">
    <h2>@ViewBag.Title</h2>
</div>
}
<div class="row">
    <div class="col-xs-12">
        <div id="map" style="height:380px; margin-bottom:30px;"></div>
    </div>

</div>
<div class="row">
    <div class="col-sm-4">
        <address>
            Unit 10 Glenthorne Mews<br />
            Hammersmith<br />
            London, W6 0LJ<br /><br />

            <abbr title="Telephone">T:</abbr>
            +44 (0)208 144 9785
            <br>
            <abbr title="Mobile">M:</abbr>
            +44 (0)750 303 3874
        </address>
        <address>
            <strong>Support:</strong>   <a href="mailto:info@mrbitalia.com">info@mrbitalia.com</a><br />
            <strong>Marketing:</strong> <a href="mailto:sales@mrbitalia.com">sales@mrbitalia.com</a>
        </address>
    </div>
    <div class="col-sm-8">
        <form id="formContactPage" action="/contact" method="post">
            <div class="form-group">
                <input type="text" class="form-control" id="nameContact" name="name" placeholder="Enter name">
            </div>
            <div class="form-group">
                <input type="email" class="form-control required" name="mail" id="EmailContact" placeholder="Enter email">
            </div>
            <div class="form-group">
                <textarea name="txtMessage" class="form-control required" placeholder="Message"></textarea>
            </div>

            <button type="submit" class="btn btn-default">Send</button>
        </form>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="https://maps.google.com/maps/api/js?sensor=false"></script>
<script type="text/javascript">
    //51.494401, -0.232244
    var initialize = function () {

        var latlng = new google.maps.LatLng(51.494401, -0.232244);
        var options = {
            zoom: 15,
            center: latlng,
            scrollwheel: false,
            mapTypeId: google.maps.MapTypeId.ROADMAP,
            scrollwheel: false,
            disableDoubleClickZoom: false,
            keyboardShortcuts: false,
            overviewMapControl: false,
            streetViewControl: false,
        };

        var map = new google.maps.Map(document.getElementById('map'), options);

        var marker = new google.maps.Marker(
        {
            position: latlng,
            map: map,
            title: 'Marble Italia LTD',
            icon: '/Images/map-marker-32.png',
        });

        var tooltip = '<div id="tooltip">' +
       //'<img src="/Images/logo-marbleitalia.png" alt="Marble Italia" width="190" style"background-color: #000;padding: 7px 10px;border-radius: 5px;">' +
        '<p><strong>Marble Italia LTD</strong><br>' +
        'Unit 10 Glenthorne Mews<br>' +
        'Hammersmith<br>' +
        'London, W6 0LJ' +
        '</div>';
        var infowindow = new google.maps.InfoWindow({
            content: tooltip
        });

        google.maps.event.addListener(marker, 'click', function () {
            infowindow.open(map, marker);
        });

    }

    window.onload = initialize;
</script>

    }